{% extends "layout.njk" %}

{% block head %}  
  <title>Luiz Furtado | Sobre</title>
{% endblock %}

{% block content %}
  
  <div id="wrapper">
    <img src="{{ info.avatar_url }}" alt="Profile picture of {{ info.name }}">
    <h1>{{ info.name }}</h1>
    <h2>{{ info.role }}</h2>
    <p>{{ info.bio }}</p>
  </div>

  <div id="links-social" class="links">
    {% for link in info.social %}
      <a href="{{ link.url }}" target="_blank">{{ link.name }}</a>
    {% endfor %}
  </div>

{% endblock %}